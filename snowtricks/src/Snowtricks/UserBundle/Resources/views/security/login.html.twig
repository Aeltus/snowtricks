{% extends ":Default:layout.html.twig" %}

{% block title %}Identification{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Identifiez vous</h1>

                <!-- In case of error -->
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <!-- Identifiaction form -->
                {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success">Login <span class="fa fa-lock"></span></button>
                &nbsp;
                <a href="{{ path('snowtricks_core_registration') }}">Cr√©er un compte</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
