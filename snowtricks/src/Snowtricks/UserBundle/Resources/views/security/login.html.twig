{% extends ":Default:layout.html.twig" %}

{% block title %}Identification{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h1>Identifiez vous</h1>

                <!-- In case of error -->
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <!-- Identifiaction form -->
                {{ form_start(form) }}
                {{ form_row(form._username) }}
                {{ form_row(form._password) }}
                <button type="submit" class="btn btn-success col-xs-12 top10">Login <span class="fa fa-lock"></span></button>
                {{ form_end(form) }}
                <a href="{{ path('snowtricks_core_lost_password') }}"><div class="btn btn-warning col-xs-12 top10"><i class="fa fa-exclamation" aria-hidden="true"></i>
                         Mot de passe perdu <i class="fa fa-exclamation" aria-hidden="true"></i>
                    </div></a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-11 top10 bottom10">
                <div class="col-xs-12 text-center">
                    <strong>OU</strong>
                </div>
                <div class="col-xs-2 col-xs-offset-5 text-center top10">
                    <a href="{{ path('snowtricks_o_auth_connect') }}"><div class="btn btn-primary"><i class="fa fa-facebook-square" aria-hidden="true"></i> Connection
                    </div></a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
