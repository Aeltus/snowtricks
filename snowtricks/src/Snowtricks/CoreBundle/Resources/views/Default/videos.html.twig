{% extends ":Default:layout.html.twig" %}

{% block title %}Effacer les videos{% endblock %}

{% block content %}


    <div class="row bottom10">
        <div class="col-xs-12 text-center">
            <h2>Effacer les vidéos</h2>
        </div>

        <div class="col-xs-12 text-center">
            <p>Voici les vidéos liées à la figure "{{ trick.title }}"</p>
            <p>Cliquez sur supprimer pour les effacer définitivement.</p>
        </div>
        {% for video in trick.videos %}
            <div class="col-sm-6 text-center top10 bottom10">
                <div class="col-xs-12">{{ video.address|raw }}</div>
                <a href="{{ path('SnowtricksCore_Videos_Delete_One', { 'idVideo': video.id , 'idTrick': trick.id}) }}"><div class="btn btn-danger">Supprimer</div></a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
