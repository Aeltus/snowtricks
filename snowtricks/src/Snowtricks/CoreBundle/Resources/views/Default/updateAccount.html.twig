{% extends ":Default:layout.html.twig" %}

{% block title %}Modification de compte{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="col-xs-12 text-center">
                    <h1>Modification de compte</h1>
                </div>

                <!-- Identifiaction form -->
                {{ form_start(form, {
                    'attr': { 'id': 'my_form'}
                }) }}
                {{ form_row(form.name) }}
                {{ form_row(form.surname) }}
                {{ form_row(form.mail) }}

                <div class="col-xs-12" id="add-user-picture-box">
                    <div class="col-xs-3 col-xs-offset-1 text-center top 10" id="user-picture">
                        <p>Votre image actuelle</p>
                        <img src="
                        {% if user.picture is empty %}
                            {{ asset('bundles/snowtricksuser/img/default-user.png') }}
                        {% else %}
                            {{ asset('uploads_users/'~user.picture) }}
                        {% endif %}
                        " alt="photo de profil" id="image_preview"/>
                    </div>
                    <div class="col-xs-6 col-xs-offset-2 text-center top10">
                        <p><strong>Modifier mon image de profil</strong></p>
                        {{ form_row(form.file, {
                        'required': false
                        }) }}
                    </div>
                </div>

                {{ form_row(form.plainPassword.first, {
                    'label': 'Mot de passe : ',
                    'required': false
                }) }}
                {{ form_row(form.plainPassword.second, {
                    'label':'Répétez le mot de passe : ',
                    'required': false
                }) }}

                {{ form_end(form) }}
                <div class="col-xs-12 btn btn-danger bottom10" id="user-deletion-btn" data-target="{{ path('SnowtricksCore_User_Deletion') }}">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Supprimer mon compte <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    </div>
            </div>
        </div>
    </div>

{% endblock %}
