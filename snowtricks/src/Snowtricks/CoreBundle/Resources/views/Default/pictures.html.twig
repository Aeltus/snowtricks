{% extends ":Default:layout.html.twig" %}

{% block title %}Effacer les photos{% endblock %}

{% block content %}


    <div class="row bottom10">
        <div class="col-xs-12 text-center">
            <h2>Effacer les photos</h2>
        </div>

        <div class="col-xs-12 text-center">
            <p>Voici les photos liées à la figure "<a class="strong-link" href="{{ path('SnowtricksCore_Figure', { 'id': trick.id }) }}">{{ trick.title }}</a>" </p>
            <p>Cliquez sur supprimer pour les effacer définitivement.</p>
        </div>
        {% for picture in trick.pictures %}
            <div class="col-sm-2 text-center top10 bottom10">
                <div class="col-xs-12"><img src="{{ picture.address }}" /></div>
                <a href="{{ path('SnowtricksCore_Pictures_Delete_One', { 'idPicture': picture.id , 'idTrick': trick.id}) }}"><div class="btn btn-danger top10 bottom10">Supprimer</div></a>
            </div>
        {% endfor %}
    </div>

{% endblock %}
