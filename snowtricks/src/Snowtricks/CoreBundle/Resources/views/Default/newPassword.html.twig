{% extends ":Default:layout.html.twig" %}

{% block title %}Nouveau mot de passe{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-xs-11">
                <h1>Nouveau mot de passe</h1>

                <p><strong>ATTENTION : </strong>Cette opération est irréversible et entraine la destruction de votre ancien mot de passe.</p>
                <!-- Identifiaction form -->
                {{ form_start(form) }}
                {{ form_row(form.plainPassword.first, {
                    'label': 'Mot de passe : '
                }) }}
                {{ form_row(form.plainPassword.second, {
                    'label':'Répétez le mot de passe : '
                }) }}

                <button type="submit" class="btn btn-success top10 bottom10 col-xs-12" formnovalidate><i class="fa fa-exclamation" aria-hidden="true"></i>
                    Définir mon nouveau mot de passe <i class="fa fa-exclamation" aria-hidden="true"></i></button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
