{% extends ":Default:layout.html.twig" %}

{% block title %}Création de compte{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="col-xs-12 text-center">
                    <h1>Création de compte</h1>
                </div>

                <!-- Identifiaction form -->
                {{ form_start(form, {
                    'attr': { 'id': 'my_form'}
                }) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.surname) }}
                    {{ form_row(form.mail) }}

                    <div class="col-xs-12" id="add-user-picture-box">
                        <div class="col-sm-3 col-sm-offset-1 text-center top 10" id="user-picture">
                            <p>Votre image actuelle</p>
                            <img src="
                            {{ asset('bundles/snowtricksuser/img/default-user.png') }}
                        " alt="photo de profil" id="image_preview"/>
                        </div>
                        <div class="col-sm-6 col-sm-offset-2 text-center top10">
                            <p><strong>Ajouter une image de profil</strong></p>
                            <p>(Fichier jpg de moins de 1 mo)</p>
                            {{ form_row(form.picture, {
                                'label': false
                            }) }}
                        </div>
                    </div>

                    {{ form_row(form.plainPassword.first, {
                        'label': 'Mot de passe : '
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label':'Répétez le mot de passe : '
                    }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
