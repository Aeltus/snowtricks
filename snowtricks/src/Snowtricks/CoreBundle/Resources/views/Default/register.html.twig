{% extends ":Default:layout.html.twig" %}

{% block title %}Création de compte{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-xs-11">
                <h1>Création de compte</h1>

                <!-- Identifiaction form -->
                {{ form_start(form) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.surname) }}
                    {{ form_row(form.mail) }}

                    <div class="col-xs-12" id="add-user-picture-box">
                        <div class="col-xs-6 col-xs-offset-3 text-center top10">
                            <p><strong>Ajouter une image de profil</strong></p>
                            {{ form_row(form.file, {
                                'required': false
                            }) }}
                        </div>
                    </div>

                    {{ form_row(form.plainPassword.first, {
                        'label': 'Mot de passe : '
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label':'Répétez le mot de passe : '
                    }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
